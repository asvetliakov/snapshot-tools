{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"lib" : [ "es2016" ],
		"outDir": "../client/server",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true,
		"types": [
			"mocha",
			"sinon",
			"sinon-chai",
			"chai-subset"
		]
	},
	"exclude": [
		"node_modules"
	]
}